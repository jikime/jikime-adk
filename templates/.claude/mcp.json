{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "JikiME-ADK v2 MCP Server Configuration",

  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Real-time library documentation lookup",
      "env": {},
      "usage": {
        "purpose": "프레임워크/라이브러리 공식 문서 조회",
        "commands": ["/jikime:1-discover", "/jikime:3-migrate"],
        "examples": [
          "Next.js App Router 패턴 조회",
          "Prisma 스키마 작성법",
          "React 18 hooks 문서"
        ]
      }
    },

    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-playwright@latest"],
      "description": "Browser automation and E2E testing",
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      },
      "usage": {
        "purpose": "E2E 테스트 및 브라우저 자동화",
        "commands": ["/jikime:4-verify", "/jikime:test"],
        "examples": [
          "마이그레이션된 페이지 렌더링 검증",
          "사용자 플로우 테스트",
          "스크린샷 비교"
        ]
      }
    },

    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-filesystem@latest",
        "--allow-dir", ".",
        "--allow-dir", "/tmp"
      ],
      "description": "Enhanced file system operations",
      "usage": {
        "purpose": "파일 시스템 고급 작업",
        "commands": ["all"],
        "examples": [
          "대용량 파일 처리",
          "디렉토리 트리 분석",
          "파일 검색 최적화"
        ]
      }
    },

    "git": {
      "command": "npx",
      "args": ["-y", "mcp-git@latest"],
      "description": "Git operations and version control",
      "usage": {
        "purpose": "Git 작업 자동화",
        "commands": ["/jikime:3-migrate", "/jikime:4-verify"],
        "examples": [
          "마이그레이션 진행 커밋",
          "브랜치 관리",
          "변경 이력 추적"
        ]
      }
    },

    "memory": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-memory@latest"],
      "description": "Persistent memory across sessions",
      "usage": {
        "purpose": "세션 간 컨텍스트 유지",
        "commands": ["all"],
        "examples": [
          "프로젝트 설정 기억",
          "마이그레이션 진행 상태 유지",
          "사용자 선호도 저장"
        ]
      }
    }
  },

  "serverProfiles": {
    "migration": {
      "description": "레거시 마이그레이션 작업용",
      "servers": ["context7", "playwright", "filesystem", "git"],
      "priority": ["context7", "git"]
    },
    "development": {
      "description": "일반 개발 작업용",
      "servers": ["context7", "filesystem", "git"],
      "priority": ["context7"]
    },
    "testing": {
      "description": "테스트 및 검증용",
      "servers": ["playwright", "filesystem"],
      "priority": ["playwright"]
    }
  },

  "autoActivation": {
    "rules": [
      {
        "trigger": "*.tsx, *.jsx, React, Next.js, Vue",
        "activate": ["context7"],
        "reason": "프론트엔드 프레임워크 문서 필요"
      },
      {
        "trigger": "/jikime:4-verify, e2e, test",
        "activate": ["playwright"],
        "reason": "E2E 테스트 실행"
      },
      {
        "trigger": "/jikime:1-discover, /jikime:3-migrate",
        "activate": ["context7", "git"],
        "reason": "마이그레이션 워크플로우"
      }
    ]
  }
}
