    "ask": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.config/gcloud/**)",
      "Write(./secrets/**)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/gcloud/**)",
      "Edit(./secrets/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.config/gcloud/**)",
      "Grep(./secrets/**)",
      "Grep(~/.ssh/**)",
      "Grep(~/.aws/**)",
      "Grep(~/.config/gcloud/**)",
      "Glob(./secrets/**)",
      "Glob(~/.ssh/**)",
      "Glob(~/.aws/**)",
      "Glob(~/.config/gcloud/**)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(rm -rf C\\:/:*)",
      "Bash(rm -rf C\\:/*:*)",
      "Bash(del /S /Q C\\:/:*)",
      "Bash(rmdir /S /Q C\\:/:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git clean -fdx:*)",
      "Bash(git rebase -i:*)",
      "Bash(format:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chmod 777:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(reboot:*)",
      "Bash(shutdown:*)",
      "Bash(init:*)",
      "Bash(systemctl:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(DROP DATABASE:*)",
      "Bash(DROP TABLE:*)",
      "Bash(TRUNCATE:*)",
      "Bash(DELETE FROM:*)",
      "Bash(mongo:*)",
      "Bash(mongosh:*)",
      "Bash(redis-cli FLUSHALL:*)",
      "Bash(redis-cli FLUSHDB:*)",
      "Bash(psql -c DROP:*)",
      "Bash(mysql -e DROP:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "jikime statusline",
    "padding": 0,
    "refreshInterval": 300
  },
  "cleanupPeriodDays": 30,
  "env": {
    "JIKIME_CONFIG_SOURCE": "sections",
    "ENABLE_TOOL_SEARCH": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "55555"
  }
}
