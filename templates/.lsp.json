{
  "$schema": "https://code.claude.com/schemas/lsp.json",
  "_comment": "JikiME-ADK Language Server Protocol Configuration - Aligned with jikime-lang-* skills",

  "python": {
    "command": "pyright-langserver",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".py": "python",
      ".pyi": "python"
    }
  },

  "typescript": {
    "command": "typescript-language-server",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".ts": "typescript",
      ".tsx": "typescriptreact",
      ".mts": "typescript",
      ".cts": "typescript"
    }
  },

  "javascript": {
    "command": "typescript-language-server",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".js": "javascript",
      ".jsx": "javascriptreact",
      ".mjs": "javascript",
      ".cjs": "javascript"
    }
  },

  "go": {
    "command": "gopls",
    "args": ["serve"],
    "extensionToLanguage": {
      ".go": "go"
    }
  },

  "java": {
    "command": "jdtls",
    "args": [],
    "extensionToLanguage": {
      ".java": "java"
    }
  },

  "php": {
    "command": "intelephense",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".php": "php"
    }
  },

  "dart": {
    "command": "dart",
    "args": ["language-server", "--protocol=lsp"],
    "extensionToLanguage": {
      ".dart": "dart"
    }
  }
}
